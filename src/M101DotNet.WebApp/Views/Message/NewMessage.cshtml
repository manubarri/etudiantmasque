@{
    ViewBag.Title = "Contact";
}
<div class="container body-content">
    <div class="content-noindex">
        <h1 style="text-align:center;">@ViewBag.Title</h1>

        @Html.ValidationSummary(true)

        @using (Html.BeginForm("NewMessage", "Message"))
        {
            <div class="row">
                <div class="col-md-7 col-md-offset-3">
                    <br />
                    <br />
                    <div class="editor-label">
                        <label for="Nom">Nom</label>
                    </div>
                    <input type="text" class="form-control" name="Name" />
                    <div class="editor-label">
                        <label for="Email">Email</label>
                    </div>
                    <input type="text" class="form-control" name="Email" />
                    <div class="editor-label">
                        <label for="Content">Contenu</label>
                    </div>
                    <textarea name="Content" class="form-control"></textarea>
                    <br />
                    <!-- CAPTCHA -->
                    <div class="g-recaptcha" data-sitekey="6LdSKioTAAAAADRxJXdiznOKVtRIqC3mgGGz_egI"></div>
                    <br />
                    <!-- FIN CAPTCHA -->
                    <br />
                    <p>
                        <button id="capsubmit" type="submit" class="btn btn-default">Envoyer &raquo;</button>
                    </p>
                </div>
            </div>
        }
    </div>
</div>

