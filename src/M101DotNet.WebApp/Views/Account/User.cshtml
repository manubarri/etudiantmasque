@if (Request.IsAuthenticated)
{
    ViewBag.Title = @Model.Name;

    <div class="container body-content">
        <div class="content-noindex">
            <h1 style="text-align:center;">@ViewBag.Title</h1>
        
            @Html.ValidationSummary(true)

            <div class="row">
                <div class="col-md-4" style="text-align:center;">
                    <h3>Nom</h3>
                    <p>@Model.Name</p>
                    <p>
                        <a class="btn btn-default" style="text-align:center;" href="#ModalName" data-toggle="modal">Changer &raquo;</a>
                        <!--<button type="submit" class="btn btn-default">Changer &raquo;</button>-->
                    </p>
                </div>
                <div class="col-md-4" style="text-align:center;">
                    <h3>Email</h3>
                    <p>@Model.Email</p>
                    <p>
                        <a class="btn btn-default" style="text-align:center;" href="#ModalEmail" data-toggle="modal">Changer &raquo;</a>
                        <!--<button type="submit" class="btn btn-default">Changer &raquo;</button>-->
                    </p>
                </div>
                <div class="col-md-4" style="text-align:center;">
                    <h3>Password</h3>
                    <p>@Model.Password</p>
                    <p>
                        <a class="btn btn-default" style="text-align:center;" href="#ModalPassword" data-toggle="modal">Changer &raquo;</a>
                        <!--<button type="submit" class="btn btn-default" onclick="OpenDialog()">Changer &raquo;</button>-->
                    </p>
                </div>
            </div>
        </div>
    </div>
    <!-- MODAL PASSWORD -->
    <div class="modal fade" tabindex="-1" role="dialog" id="ModalPassword">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h2 style="text-align:center;">Change Password</h2>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("NewPassword", "Account"))
                {
                    <input type="hidden" for="Name" name="Name" value="@Model.Name" />
                    <input type="hidden" for="Email" name="Email" value="@Model.Email" />
                    <input type="hidden" for="Id" name="Id" value="@Model.Id" />
                    <input type="hidden" for="Password" name="Password" value="@Model.Password" />
                    <div class="editor-label">
                        <label for="OldPassword">Vieux Password</label>
                    </div>
                    <input type="password" name="OldPassword" class="form-control" />
                    <div class="editor-label">
                        <label for="NewPassword">Nouveau Password</label>
                    </div>
                    <input type="password" name="NewPassword" class="form-control" />
                    <div class="editor-label">
                        <label for="ConfirmPassword">Confirm Password</label>
                    </div>
                    <input type="password" name="ConfirmPassword" class="form-control" />
                    <br />
                    <br />
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Changer &raquo;</button>
                    </div>
                }
            </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <!-- MODAL EMAIL -->
    <div class="modal fade" tabindex="-1" role="dialog" id="ModalEmail">
      <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h2 style="text-align:center;">Change Email</h2>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("NewEmail", "Account"))
                {
                    <input type="hidden" for="Id" name="Id" value="@Model.Id" />
                    <input type="hidden" for="Email" name="Email" value="@Model.Email" />
                    <input type="hidden" for="Name" name="Name" value="@Model.Name" />
                    <div class="editor-label">
                        <label>Nouveau Email</label>
                    </div>
                    <input type="text" name="NewEmail" for="NewEmail" class="form-control" />
                    <input type="text" name="ConfirmEmail" for="ConfirmEmail" class="form-control" />
                    <br />
                    <br />
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Changer &raquo;</button>
                    </div>
                }
            </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <!-- MODAL NOM -->
    <div class="modal fade" tabindex="-1" role="dialog" id="ModalName">
      <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h2 style="text-align:center;">Change Nom</h2>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("NewName", "Account"))
                {
                    <input type="hidden" for="Id" name="Id" value="@Model.Id" />
                    <input type="hidden" for="Email" name="Email" value="@Model.Email" />
                    <input type="hidden" for="Name" name="Name" value="@Model.Name" />
                    <div class="editor-label">
                        <label>Nouveau Nom</label>
                    </div>
                    <input type="text" name="NewName" for="NewName" class="form-control" />
                    <br />
                    <br />
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Changer &raquo;</button>
                    </div>
                }
            </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
}
