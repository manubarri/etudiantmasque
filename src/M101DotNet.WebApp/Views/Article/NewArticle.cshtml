@if (Request.IsAuthenticated)
{
    ViewBag.Title = "Nouvel Article";

    <div class="container body-content">
        <div class="content-noindex">
            <h1 style="text-align:center;">@ViewBag.Title</h1>

            @Html.ValidationSummary(true)

            @using (Html.BeginForm("NewArticle", "Article", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class="col-md-7 col-md-offset-3">
                        <br />
                        <br /> 
                        <div class="editor-label">
                            <label for="Image">Image</label>
                        </div>  
                        <input type="file" class="form-control" for="Image" name="Image" id="Image"/>
                        <div class="editor-label">
                            <label for="Title">Title</label>
                        </div>
                        <input type="text" for="Title" name="Title" class="form-control" />
                        <div class="editor-label">
                            <label for="Content">Contenu</label>
                        </div> 
                        <textarea name="Content" for="Content" class="form-control"></textarea>
                        <div class="editor-label">
                            <label for="Tags">Tags</label>
                        </div>
                        <input type="text" name="Tags" for="Tags" class="form-control" placeholder="tag1,tag2,tag 3,tagn.."/>
                        <br />
                        <p>
                            <button type="submit" class="btn btn-default">Envoyer &raquo;</button>
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
}

